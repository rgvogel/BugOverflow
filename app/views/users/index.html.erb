<% if !notice.blank? %>
<p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1>Users</h1>
<table class="table table-hover">
<thead>
<tr>
<th class="col-md-3">First Name</th>
<th class="col-md-3">Last Name</th>
<th class="col-md-3">Email</th>
<th class="col-md-3">Actions</th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
<td class="col-md-3"><%= user.fname %></td>
<td class="col-md-3"><%= user.lname %></td>
<td class="col-md-3"><%= user.email %></td>
<td class="col-md-3">
<%= link_to user, class: "btn btn-default btn-sm" do %>
<i class="glyphicon glyphicon-eye-open"></i> Show
<% end %>
<%= link_to edit_user_path(user), class: "btn btn-default btn-sm" do %>
<i class="glyphicon glyphicon-eye-open"></i> Edit
<% end %>
<%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-da
nger btn-sm" do %>
<i class="glyphicon glyphicon-eye-open"></i> Delete
<% end %>
</td>
</tr>
<% end %>
</tbody>
</table>
<br/>
<%= link_to 'New user', new_user_path, :class => "btn btn-primary" %>
